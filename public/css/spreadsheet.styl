@import shared

.header
  background-color: white
  width: 100%
  z-index: 10

  .menus
    padding-left: 20px

    .title
      padding: 10px 20px
      color: #555

    .menu
      padding-bottom: 20px

      span
        padding: 5px 10px
        cursor: pointer

        &:hover
          background-color: #ccc

  .fn-box
    width: 100%
    height: 30px

.wrapper
  position: absolute
  top: 110px
  bottom: 0
  background-color: #ccc
  width: 100%
  overflow: auto

  .content
    overflow: auto
    position: absolute
    bottom: 0
    top: 27px

  table
    border-collapse: collapse

    .label
      text-align: center
      background-color: #aaa

    td
      border: 1px solid
      background-color: white

      .box
        width: 100px
        height: 25px
